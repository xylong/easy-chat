// 语法版本
syntax = "v1"

// 服务接口的描述
info (
	title:"用户api"
	desc: "集成用户服务业务的api接口"
	author: "xyl"
	version: "v1"
)

// 请求参数结构
type (
	UserReq {
		Id int32 `json:"id"`
	}

	UserResp {
		Id    int32  `json:"id"`
		Name  string `json:"name"`
		Phone string `json:"phone"`
	}
)

// 定义http服务
service User {
	// 定义http.Handle
	@handler user
	// 请求方法 Get
	// 请求路由 /user
	// 请求参数UserReq 响应是UserResp
	get /user(UserReq) returns (UserResp)
}